<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/items_row"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"

    >


    <RelativeLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/colorWhite"
        >


        <!--<ImageView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginTop="24dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginBottom="24dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@color/colorBlue"-->
        <!--android:id="@+id/note_row_image"-->
        <!--/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/items_row_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TITLE COMES HERE"
                android:textStyle="bold"
                android:textColor="@color/green_800"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/items_row_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION COMES HERE"
                android:textColor="@color/green_800"
                android:textSize="14sp"
                android:textStyle="normal"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
